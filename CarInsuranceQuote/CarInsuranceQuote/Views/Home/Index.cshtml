@using (Html.BeginForm("Estimate", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="card">
            <div class="card-header text-center">
                <h1>For a free insurance quote, submit your information below.</h1>
            </div>
            <div class="card-body mx-auto">
                <div class="form-group">
                    <h5><label for="A">First Name</label></h5>
                    <input type="text" class="form-control" id="A" name="firstName" required>
                </div>
                <div class="form-group">
                    <h5><label for="B">Last Name</label></h5>
                    <input type="text" class="form-control" id="B" name="lastName" required>
                </div>
                <div class="form-group">
                    <h5><label for="C">Email Address</label></h5>
                    <input type="email" class="form-control" id="C" name="email" required>
                </div>
                <div class="form-group">
                    <h5><label for="D">Date of Birth</label></h5>
                    <input type="date" class="form-control" id="D" name="birthdate" required>
                </div>
                <div class="form-group">
                    <h5><label for="E">Car Year</label></h5>
                    <input type="number" class="form-control" id="E" name="carYear" placeholder="Ex: 1992" required>
                </div>
                <div class="form-group">
                    <h5><label for="F">Car Make</label></h5>
                    <input type="text" class="form-control" id="F" name="carMake" placeholder="Ex: Geo" required>
                </div>
                <div class="form-group">
                    <h5><label for="G">Car Model</label></h5>
                    <input type="text" class="form-control" id="G" name="carModel" placeholder="Ex: Metro" required>
                </div>
                <div class="form-group">
                    <h5>DUI Conviction</h5>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="dui" id="Ha" value="true">
                        <label class="form-check-label" for="Ha">True</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="dui" id="Hb" value="false" checked>
                        <label class="form-check-label" for="Hb">False</label>
                    </div>
                </div>
                <div class="form-group">
                    <h5><label for="I">Number of Speeding Tickets (last three years)</label></h5>
                    <input type="number" min="0" class="form-control" id="I" name="tickets" required>
                </div>
                <div class="form-group">
                    <h5>Coverage</h5>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="coverage" id="Ja" value="full" checked>
                        <label class="form-check-label" for="Ja">Full Coverage</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="coverage" id="Jb" value="liability">
                        <label class="form-check-label" for="Jb">Liability</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Get Estimate</button>
            </div>
        </div>
    </div>
}